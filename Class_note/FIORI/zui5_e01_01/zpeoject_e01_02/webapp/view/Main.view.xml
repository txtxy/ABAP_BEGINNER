<mvc:View xmlns:core="sap.ui.core" controllerName="zpeojecte0102.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">

        <content>
        	<l:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiContentPadding" width="100%">

                <Input id="idInput1" editable="true" width="100%"></Input>
                <Select id = "Select1" enabled="true">
                    <items>
                        <core:Item  key="plus" text = "+" />
                        <core:Item key= "minus" text = "-" />
                        <core:Item key= "multiply" text = "*" />
                        <core:Item key= "divide" text = "/" />
                    </items>
                </Select>
                <Input id="idInput2" editable="true" width="100%"></Input>
                <Button id= "button1" text="button1" press="onButtonPress"  ></Button>

	        </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>
