<mvc:View controllerName="C05.zprojecte0102.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core = "sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content >
        <l:VerticalLayout>
            <Input id = "idInput" submit="onsubmit" />
            <Text id = "idText"/>
        </l:VerticalLayout>
        	<l:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiContentPadding" width="100%">

                <Input id="idInput1" editable="true" width="100%"></Input>
                <Select id = "idSelect1" enabled="true">
                    <items>
                        <core:Item  key="plus" text = "+" />
                        <core:Item key= "minus" text = "-" />
                        <core:Item key= "multiply" text = "*" />
                        <core:Item key= "divide" text = "/" />
                    </items>
                </Select>
                <Input id="idInput2" editable="true" width="100%"></Input>
                <Button id= "idButton1" text="button1" press="onButtonPress"  ></Button>

	        </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>