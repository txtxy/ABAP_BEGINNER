<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="openDetail" beforeOpen="onBeforeOpen">
        <content>
        <HBox >
            <Table id="idProductsTable"
                sticky="HeaderToolbar,ColumnHeaders"
                inset="false"
                items="{/to_Item}"
                mode="SingleSelectMaster"
                selectionChange="onRowPress">
                <headerToolbar>
                    <Toolbar>
                        <Title text="to_Item" level="H2" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Carrid" />
                    </Column>
                    <Column>
                        <Text text="Connid" />
                    </Column>
                    <Column>
                        <Text text="Seatsmax" />
                    </Column>
                    <Column>
                        <Text text="Seatsocc" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier text="{ProductID}" />
                            <Text text="{Connid}" />
                            <Text text="{Seatsmax}" />
                            <Text text="{Seatsocc}" />
                         </cells>
                    </ColumnListItem>
                </items>
            </Table>

</HBox>
        </content>
        <endButton>
            <Button text="닫기" press=".onClose"></Button>
            <!--앞에 점 찍힌것은 내가바라보는 컨트롤러에 해당한다는의미 -->
        </endButton>
    </Dialog>
</core:FragmentDefinition>